@model IT_Lab3.Models.PatientDoctor
@{
    ViewBag.Title = "InsertNewPatient";
}

<h2>Insert new patient for Doctor: @Model.Doctor.Name</h2>

@using (Html.BeginForm("InsertPatientDoctor", "Doctors"))
{
    <div class="form-group">
        @Html.DropDownListFor(m => m.PatientId, new SelectList(Model.Patients,
    "Id", "Name"), new { @class = "form-control" })

        @Html.HiddenFor(m => m.DoctorId)
    </div>
    <div class="form-group">
        <button class="btn" type="submit">Add patient to movie</button>
    </div>
}

